pkgname=libbridge
pkgver=1.0
pkgrel=1
pkgdesc="Orchid bridging library"
arch=('any')
url="https://orchidglobal.github.io/docs/linux/libbridge"
license=('GPL-2.0')
depends=('glibc')

source=("https://orchidglobal.github.io/releases/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.gz")

build() {
  cd "$pkgname-$pkgver"
  # Build commands here
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 libbridge /bin/bridge
  install -Dm644 bridge.h /usr/include/bridge.h
}
